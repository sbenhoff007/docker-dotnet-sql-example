@model List<Food>

@{
    ViewData["Title"] = "Favorite Foods";
}

<h1 class="bg-info text-white" style="background-color:#1d63ed !important;text-align:center;">Favorite Foods</h1>
<a asp-action="Create" class="btn btn-secondary" style="margin-bottom: 10px;">Create a Food</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Restaurant</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (Food m in Model)
    {
        <tr>
            <td>@m.Id</td>
            <td>@m.Name</td>
            <td>@m.Restaurant</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@m.Id">
                    Update
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@m.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>